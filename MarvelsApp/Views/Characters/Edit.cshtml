@{
}
@model CharacterDto

@{
    ViewData["Title"] = "Edit";
}


<div class="row mt-2">
    <div class="col-md-8 mx-auto rounded border p-3 bg-black border-black mt-2">
        <h2 class="text-center mb-5">Edit Info</h2>
        <form class="form-control" method="post" enctype="multipart/form-data" asp-action="Edit">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id</label>
                <div class="col-sm-8">
                    <input class="form-control" value="@ViewData["characterId"]" disabled>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Real Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="RealName">
                    <span asp-validation-for="RealName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Alias</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Alias">
                    <span asp-validation-for="Alias" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Gender</label>
                <div class="col-sm-8">
                    <select asp-for="Gender" class="form-select" aria-label="Default select example">

                        <option value="Male">Male</option>
                        <option value="Female">Female</option>

                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select asp-for="Category" class="form-select" aria-label="Default select example">
                        <option value="Hero">Hero</option>
                        <option value="Anti-Hero">Anti-Hero</option>
                        <option value="Villain">Villain</option>

                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Species</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Species">
                    <span asp-validation-for="Species" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Origin</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Origin">
                    <span asp-validation-for="Origin" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">First Appearance</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="FirstAppearance">
                    <span asp-validation-for="FirstAppearance" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Creator</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Creator">
                    <span asp-validation-for="Creator" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input type="file" class="form-control" asp-for="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn submitbtn-css">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn cancel-btn-css" asp-controller="Characters" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>

        </form>
        </div>
        </div>
