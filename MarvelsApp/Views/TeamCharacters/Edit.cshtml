@model MarvelsApp.Models.TeamCharacter

@{
    ViewData["Title"] = "Edit";
}

<div class="row mt-2">
    <div class="col-md-8 mx-auto rounded border p-3 bg-black border-black mt-2">
        <h2 class="text-center mb-5">Edit Team Info</h2>
        <form class="form-control" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Preserve original keys in case they change in dropdown -->
            <input type="hidden" name="originalTeamId" value="@Model.TeamId" />
            <input type="hidden" name="originalCharacterId" value="@Model.CharacterId" />

            <div class="form-group mb-3">
                <label asp-for="TeamId" class="form-label">Team</label>
                <select asp-for="TeamId" class="form-control"
                        asp-items="@(ViewData["TeamId"] as SelectList)">
                    <option value="">-- Select Team --</option>
                </select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CharacterId" class="form-label">Character</label>
                <select asp-for="CharacterId" class="form-control"
                        asp-items="@(ViewData["CharacterId"] as SelectList)">
                    <option value="">-- Select Character --</option>
                </select>
                <span asp-validation-for="CharacterId" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn submitbtn-css">Save</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn cancel-btn-css" asp-controller="TeamCharacters" asp-action="List" role="button">
                        Cancel
                    </a>
                </div>
            </div>

        </form>
    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
