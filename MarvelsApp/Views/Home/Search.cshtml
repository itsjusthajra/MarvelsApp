@model List<Character>

@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "Characters";
}

<div class="h3 mt-4">Search Results for "<strong>@ViewBag.SearchQuery</strong>" </div>
@if (!Model.Any())
{
    <p>No characters found.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-4 g-4 ">

        @foreach (var character in Model)
        {

            <div class="col">
                 <a asp-controller="Characters" asp-action="Details" asp-route-id="@character.Id" style="text-decoration: none; color: inherit;">
                <div class="card h-100">
                    <img src="/images/@character.ImageUrl" class="card-img-top card-img-css" alt="@character.Name">
                    <div class="card-body">
                        <h5 class="card-title">@character.Name</h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">@character.RealName</h6>
                        <p class="card-text">@character.Description</p>
                    </div>
                </div>
                </a>
            </div>
        }
    </div>
}